<phpunit bootstrap="Bootstrap.php" colors="true">
    <testsuite name="ZF2Authentication">
        <directory>./ZF2Authentication</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory suffix=".php">./../../</directory>
            <exclude>
                <directory suffix=".php">./../</directory>
            </exclude>
        </whitelist>
        <blacklist>
            <directory suffix=".php">./../../../../vendor/</directory>
        </blacklist>
    </filter>
    <logging>
        <log type="coverage-html" target="./../../../../data/test-html-report/zf2authentication/" charset="UTF-8" yui="true" />
        <log type="coverage-php" target="./../../../../build/coverage/coverage-zf2authentication.cov"/>
    </logging>
</phpunit>
